<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gradle.udacity.com.isneaker.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_linearlayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@color/title_background"
                android:textSize="40dp"
                android:textColor="@color/title_color"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:id="@+id/sneaker_title" />


            <ImageView
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height"
                android:paddingLeft="15dp"
                android:id="@+id/sneaker_poster"
                android:paddingRight="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_sneaker_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="20dp"
                android:id="@+id/label_sneaker_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="20dp"
                android:id="@+id/text_sneaker_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_release_date"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="20dp"
                android:id="@+id/label_release_date" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_release_date"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_release_time"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/label_release_time" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text_release_time" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_release_store"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/label_release_store" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_release_store"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
